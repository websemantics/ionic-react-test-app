{
  "name": "@ionic/react",
  "version": "0.0.9",
  "description": "React specific wrapper for @ionic/core",
  "keywords": [
    "ionic",
    "framework",
    "react",
    "mobile",
    "app",
    "hybrid",
    "webapp",
    "cordova",
    "progressive web app",
    "pwa"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/ionic.git"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "build:dev": "npm run clean && npm run compile:dev",
    "clean": "rm -rf dist && rm -rf dist-transpiled",
    "compile": "npm run tsc && rollup -c",
    "compile:dev": "npm run tsc && rollup -c rollup.config.dev.js",
    "release": "np --any-branch --no-cleanup",
    "tsc": "tsc -p .",
    "test": "jest"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@ionic/core": "^4.7.0",
    "@ionic/react-core": "0.0.9",
    "tslib": "^1.10.0"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ionicons": "^4.6.2"
  },
  "devDependencies": {
    "@trust/webcrypto": "^0.9.2",
    "@types/jest": "^23.3.9",
    "@types/node": "10.12.9",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^4.4.4",
    "@types/react-router-dom": "^4.3.1",
    "ionicons": "^4.6.2",
    "jest": "^24.8.0",
    "jest-dom": "^3.4.0",
    "np": "^5.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^7.0.0",
    "rollup": "^1.14.6",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist-transpiled",
      "dist"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
